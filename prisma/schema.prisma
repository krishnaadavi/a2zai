// A2Z AI - Prisma Schema
// Adapted from MomentumTrader

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts         Account[]
  sessions         Session[]
  savedArticles    SavedArticle[]
  topicPreferences TopicPreference[]
  readHistory      ReadHistory[]
  comments         Comment[]
  learningProgress LearningProgress[]
  preferences      UserPreferences?
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// A2Z AI Models

// Newsletter subscribers
model NewsletterSubscriber {
  id           String   @id @default(cuid())
  email        String   @unique
  dailyDigest  Boolean  @default(false)
  weeklyDigest Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Daily digest archive for web display
model DailyDigest {
  id           String   @id @default(cuid())
  date         DateTime @unique
  topStories   Json     // Array of top stories
  trendingModels Json?  // Trending models
  researchPapers Json?  // Latest papers
  newsCount    Int      // Total news items
  createdAt    DateTime @default(now())
  
  @@index([date])
}

// Saved articles for users
model SavedArticle {
  id        String   @id @default(cuid())
  userId    String
  articleId String   // External article ID or URL hash
  title     String
  url       String
  source    String
  savedAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, articleId])
  @@index([userId])
}

// User topic preferences
model TopicPreference {
  id        String   @id @default(cuid())
  userId    String
  topic     String   // 'llm', 'computer_vision', 'robotics', 'policy', etc.
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, topic])
  @@index([userId])
}

// User read history for personalization
model ReadHistory {
  id        String   @id @default(cuid())
  userId    String
  articleId String   // External article ID
  articleType String // 'news', 'research', 'model'
  readAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, articleId])
  @@index([userId])
  @@index([readAt])
}

// Learning content - Glossary terms
model GlossaryTerm {
  id           String   @id @default(cuid())
  slug         String   @unique
  term         String
  shortDef     String   // 1-2 sentence definition
  fullDef      String   @db.Text // Detailed explanation
  category     String   // 'models', 'techniques', 'concepts', 'companies'
  relatedTerms String[] // Array of related term slugs
  examples     String?  @db.Text // Real-world examples
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([category])
  @@index([slug])
}

// Learning content - AI 101 Explainers
model Explainer {
  id         String   @id @default(cuid())
  slug       String   @unique
  title      String
  subtitle   String?
  content    String   @db.Text // Markdown content
  category   String   // 'fundamentals', 'models', 'applications', 'ethics'
  difficulty String   // 'beginner', 'intermediate', 'advanced'
  readTime   Int      // Minutes
  order      Int      @default(0) // For sequencing within category
  published  Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([category])
  @@index([difficulty])
  @@index([order])
}

// Comments on articles
model Comment {
  id          String    @id @default(cuid())
  userId      String
  articleId   String    // External article ID (news, glossary, explainer)
  articleType String    // 'news', 'glossary', 'explainer'
  content     String    @db.Text
  parentId    String?   // For nested replies
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user    User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  parent  Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies Comment[] @relation("CommentReplies")

  @@index([articleId, articleType])
  @@index([userId])
  @@index([parentId])
  @@index([createdAt])
}

// User preferences for content and notifications
model UserPreferences {
  id                    String   @id @default(cuid())
  userId                String   @unique

  // Content Categories (what they want to see)
  showNews              Boolean  @default(true)
  showModels            Boolean  @default(true)
  showResearch          Boolean  @default(true)
  showFunding           Boolean  @default(true)
  showTools             Boolean  @default(true)
  showCourses           Boolean  @default(true)

  // Topics of Interest
  topicsLLMs            Boolean  @default(true)
  topicsComputerVision  Boolean  @default(false)
  topicsRobotics        Boolean  @default(false)
  topicsAudio           Boolean  @default(false)
  topicsAgents          Boolean  @default(true)
  topicsOpenSource      Boolean  @default(false)
  topicsStartups        Boolean  @default(false)
  topicsPolicy          Boolean  @default(false)

  // Email Preferences
  emailDigestDaily      Boolean  @default(false)
  emailDigestWeekly     Boolean  @default(true)
  emailBreakingNews     Boolean  @default(false)

  // Display Preferences
  defaultHomePage       String   @default("home") // 'home', 'news', 'learn'
  compactView           Boolean  @default(false)

  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Learning progress tracking
model LearningProgress {
  id           String   @id @default(cuid())
  userId       String
  contentType  String   // 'glossary', 'explainer', 'course'
  contentId    String   // Slug or ID of the content
  status       String   // 'started', 'completed'
  completedAt  DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, contentType, contentId])
  @@index([userId])
  @@index([contentType])
}
